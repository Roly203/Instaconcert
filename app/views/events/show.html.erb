<% require 'json' %>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
  <%= @tidy_image_array %>
  <%= JSON.pretty_generate (@instagram_image_array) %>
  <ul>
  <% @instagram_image_array.each_with_index do |item,i| %>
    <li><img src="<%= @instagram_image_array[i]["images"]["standard_resolution"]["url"] %>"></img></li>
  <% end %>
  </ul>
  
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
