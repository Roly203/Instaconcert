<script type="text/javascript" charset="utf-8">
  $('#myModal').modal('show')
  
  $('.carousel').carousel({
    interval: null
  })
  
  $(document).ready(function(){
    galleryClicks();
  });
  
  var galleryClicks = function(){
    var carouselItems = $("#myCarousel .item");
  
    $('.concert-thumbnail').each(function(i, ele){
    
      $(this).click(function(){
        $(carouselItems).removeClass("active");

        $(carouselItems[i]).addClass("active");
      
      });
    
    });
  };
  
</script>

  <div class="header">
    <h2><%= link_to "< #{@event.name}", "/eventgroups/"+ @event.eventgroup_id.to_s %></h2>    
  </div>
  
  <div class="subheader">
    <%= @event.details %> | 
    <%= Time.at(@event.min_timestamp).strftime("%B %d, %Y") %> |
    <%= Time.at(@event.min_timestamp).strftime("%l:%M %p") + " - " + Time.at(@event.max_timestamp).strftime("%l:%M %p %Z")  %>
  </div>

  <br>
  <ul>
    <div id="images">
      <%= render @images %>

    </div>
      <%= will_paginate @images %>
  </ul>

  
  <div class="modal hide" id="myModal">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3><%= @event.name %></h3>
    </div>

    <div class="modal-body">
  
      <!-- Image carousel -->
      <div id="myCarousel" class="carousel slide">
        <!-- Carousel items -->
        <div class="carousel-inner">
      
          <% @event.images.sort_by { |i| i[:img_time] }.each_with_index do |image, index| %>
              <div class="item">
                <%= link_to(image_tag(image.img_standard_url), "#") %>
              </div>
          <% end %>

        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
      </div>    

    </div>
    <div class="modal-footer">
      <div class="profile-pic">
        <img src="http://distilleryimage1.instagram.com/42376ee09b7211e181bd12313817987b_7.jpg" />
      </div>
      <div class="comments">
        Comments go here lots and lots of comments and other text and i wonder how this will pan out and where it will end up
      </div>
    </div>
  </div>
</div>