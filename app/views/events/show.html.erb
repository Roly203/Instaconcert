<% require 'json' %>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
  <%= JSON.pretty_generate (@instagram_hash) %>
  <ul>
  <% @instagram_hash["data"].each_with_index do |item,i| %>
    <li><img src="<%= @instagram_hash["data"][i]["images"]["standard_resolution"]["url"] %>"></img></li>
  <% end %>
  </ul>

</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
