<script type="text/javascript" charset="utf-8">
  $('#myModal').modal('show')
  
  $('.carousel').carousel({
    interval: null
  })
</script>

<ul>
  <% @event.images.each do |image| %>
  <li class="concert-thumbnail">
    <%= link_to (image_tag image.img_standard_url, :id => image.id), "#myModal", :data => {:toggle => "modal" } %>
  </li>
  <% end %>
</ul>

